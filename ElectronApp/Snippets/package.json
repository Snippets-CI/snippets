{
  "name": "snippets",
  "productName": "snippets",
  "version": "1.0.0",
  "description": "Electron app to store all kinds of snippets",
  "main": ".webpack/main",
  "scripts": {
    "start": "electron-forge start",
    "package": "electron-forge package",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts ."
  },
  "keywords": [],
  "author": {
    "name": "Andreas Roither",
    "email": "andi.roither@protonmail.com"
  },
  "license": "MIT",
  "config": {
    "forge": {
      "packagerConfig": {},
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "snippets"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ],
      "plugins": [
        [
          "@electron-forge/plugin-webpack",
          {
            "mainConfig": "./webpack.main.config.js",
            "renderer": {
              "config": "./webpack.renderer.config.js",
              "entryPoints": [
                {
                  "html": "./src/index.html",
                  "js": "./src/renderer.ts",
                  "name": "main_window"
                }
              ]
            }
          }
        ]
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "7.12.10",
    "@babel/preset-typescript": "7.12.7",
    "@electron-forge/cli": "6.0.0-beta.52",
    "@electron-forge/maker-deb": "6.0.0-beta.52",
    "@electron-forge/maker-rpm": "6.0.0-beta.52",
    "@electron-forge/maker-squirrel": "6.0.0-beta.52",
    "@electron-forge/maker-zip": "6.0.0-beta.52",
    "@electron-forge/plugin-webpack": "6.0.0-beta.52",
    "@marshallofsound/webpack-asset-relocator-loader": "0.5.0",
    "@types/bootstrap": "5.0.1",
    "@types/jwt-decode": "2.2.1",
    "@typescript-eslint/eslint-plugin": "4.11.0",
    "@typescript-eslint/parser": "4.11.0",
    "babel-loader": "8.2.2",
    "css-loader": "5.0.1",
    "electron": "11.1.1",
    "eslint": "7.16.0",
    "eslint-plugin-import": "2.22.1",
    "file-loader": "6.2.0",
    "fork-ts-checker-webpack-plugin": "6.0.8",
    "jquery": "3.5.1",
    "mini-css-extract-plugin": "1.3.3",
    "node-loader": "1.0.2",
    "node-sass": "5.0.0",
    "postcss-loader": "4.1.0",
    "sass-loader": "10.1.0",
    "style-loader": "2.0.0",
    "ts-loader": "8.0.12",
    "typescript": "4.1.3",
    "webpack": "4.43.0"
  },
  "dependencies": {
    "@types/bootstrap-select": "^1.13.1",
    "@types/jquery": "^3.5.5",
    "autoprefixer": "^10.1.0",
    "axios": "^0.21.1",
    "bootstrap": "^4.5.3",
    "bootstrap-select": "^1.13.18",
    "electron-squirrel-startup": "^1.0.0",
    "jwt-decode": "^3.1.2",
    "monaco-editor": "^0.21.2",
    "monaco-editor-webpack-plugin": "^2.1.0",
    "popper.js": "^1.16.1"
  }
}
